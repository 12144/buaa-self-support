.notice-container{
  /* width: 100%; */
  padding:20rpx;
  border-top: solid #e2e2e2 1px;
  position: relative;
  /* border: solid 1px; */
}
.notice-head{
  /* border: solid 1px; */
  width: 710rpx;
  display: flex;
  align-items: center;
}
.notice-head image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8px;
}
.notice-head view{
  max-width: 550rpx;
  margin-left: 20rpx;
  font-size: 35rpx;
  font-weight: 300;
  /* border:solid 1px; */
}
.notice-reason{
  width: 680rpx;
  margin-top: 20rpx;
  padding-top: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-top: dashed #e2e2e2 1px;
  font-weight: 300;
}
.notice-reason text{
  display: block;
  /* border:solid 1px; */
  max-width: 630rpx;
  margin-left: 1em;
}
.notice-content{
  font-weight: 300;
}
.notice-footer{
  padding-top: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  color: #80848f;
  font-size: 12px
}
.notice-state{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  right: 2em;
  top: 1em;
}
